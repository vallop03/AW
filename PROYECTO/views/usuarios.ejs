<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Ejercicio 1 - Cabecera -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserva de un vehículo eléctrico</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel="stylesheet" href="css/bootstrap-icons-1.13.1/bootstrap-icons.css">
    <script src="js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <%- include("header") %>

    <main>
        <div class="container mt-4">
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center">
                    <caption>Usuarios</caption>
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Rol</th>
                            <th scope="col">Teléfono</th>
                            <th scope="col">Concesionario</th>
                            <th scope="col">Ciudad</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Borrar</th>

                        </tr>
                    </thead>
                     <tbody>
                        <% if(usuarios){
                            usuarios.forEach(usuario => {%>
                        <tr>
                            <td><%= usuario.id_usuario %></td>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.correo %></td>
                            <td><%= usuario.rol %></td>
                            <td><%= usuario.telefono || "-" %></td>
                            <td><%= usuario.concesionario %></td>
                            <td><%= usuario.ciudad %></td>
                            <td>
                                <button class="btn btn-primary" type="button" data-id_usuario="<%= usuario.id_usuario %>">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-danger" type="button" data-id_usuario="<%= usuario.id_usuario %>">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>
                        </tr>
                        <% }); } %>
                    </tbody>

                </table>
            </div>
        </div>
    </main>


        <script src="js/paginaPrincipal.js"></script>

</body>

</html>